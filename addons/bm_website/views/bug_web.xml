<odoo>
    <data>
         <template id="hello" name="Hello Template">
             <!--在website.layout模板中运行xml-->
             <t t-call="website.layout">
                 <h1>hello world !</h1>
                 <div class="oe_structure">
                    <section class="pt32 pb32 bg-secondary oe_custom_bg">
                        <div class="container text-center">
                          <h1> Editable text and supports drag and drop.</h1>
                        </div>
                    </section>
                    <section class="container mt16" contenteditable="False">
                      This is a non-editable text after the list of books.
                    </section>
                </div>
             </t>
         </template>
        <template id="detail" name="bug明细">
             <t t-call="website.layout">
                 <div id="wrap" class="container">
                     <!--t-field用于处理字段值的正确显示-->
                     <h1 t-field="bug.name"/>
                     <p>负责人：<span t-field="bug.user_id"/></p>
                     <!--<p>最晚解决日期：<span t-field="bug.deadline"/></p>-->
                 </div>
             </t>
         </template>
        <template id="add" name="创建 bug">
             <t t-call="website.layout">
                 <t t-set="additional_title">创建Bug</t>
                 <div id="wrap" class="container">
                     <div class="row">
                         <section id="forms">

                             <!--data-model_name标示写入的模型-->
                             <!--data-success_page成功后跳转的页面-->
                             <form action="/website_form/" method="post" data-model_name="bm.bug" data-success_page="/bugs" class="s_website_form container-fluid mt32" enctype="multipart/form-data" data-editable-form="false">

                                 <!--表单字段放置在这-->
                                 <div class="form-group form-field">
                                     <div class="col-md-3 col-sm-4 text-right">
                                         <label class="control-label" for="name">
                                             Bug
                                         </label>
                                     </div>
                                     <div class="col-md-7 col-sm-8">
                                         <input name="name" type="text" required="True"
                                                class="o_website_form_input form-control"/>
                                     </div>
                                 </div>
                                 <div class="form-group form-field">
                                     <div class="col-md-3 col-sm-4 text-right">
                                         <label class="control-label" for="file_upload">
                                             附件上传
                                         </label>
                                     </div>
                                     <div class="col-md-7 col-sm-8">
                                         <input name="file_upload" type="file"
                                                class="o_website_form_input form-control"/>
                                     </div>
                                 </div>
                                 <div class="form-group form-field">
                                     <div class="col-md-3 col-sm-4 text-right">
                                         <label class="control-label" for="user_id">
                                             负责人
                                         </label>
                                     </div>
                                     <div class="col-md-7 col-sm-8">
                                         <select name="user_id"
                                                class="o_website_form_input form-control">
                                             <t t-foreach="users" t-as="user">
                                                 <option t-att-value="user.id">
                                                     <t t-esc="user.name"/>
                                                 </option>
                                             </t>
                                         </select>
                                     </div>
                                 </div>
                                 <!--提交按钮-->
                                 <div class="form-group">
                                     <div class="col-md-offset-3 col-md-7
                                               col-sm-offset-4 col-sm-8">
                                         <a class="o_website_form_send
                                                btn btn-primary btn-lg">
                                             Save
                                         </a>
                                         <span id="o_website_form_result">

                                         </span>
                                     </div>
                                 </div>
                             </form>
                         </section>
                     </div>
                 </div>
             </t>
         </template>
    </data>
</odoo>