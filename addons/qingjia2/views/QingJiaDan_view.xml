        <field name="name">qingjia2.qingjiadan.calendar</field>
        <field name="model">qingjia2.qingjiadan</field>
        <field name="arch" type="xml">
            <calendar string="qingjia2.qingjiadan" color="" date_start="">
                <field name="name" />
                <field name="days" />
                <field name="starttime" />
                <field name="reason" />
            </calendar>
        </field>
    </record>-->

    <!-- 定义柱状折线饼状图形视图-->
    <record id="QingJiaDan_graph_view" model="ir.ui.view">
        <field name="name">qingjia2.qingjiadan.graph</field>
        <field name="model">qingjia2.qingjiadan</field>
        <field name="arch" type="xml">
            <graph string="qingjia2.qingjiadan">
                <field name="name" type="measure"/>
                <field name="days" type="measure"/>
                <field name="starttime" type="measure"/>
                <field name="reason" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- 定义透视表视图-->
    <record id="QingJiaDan_pivot_view" model="ir.ui.view" >
        <field name="name">qingjia2.qingjiadan.pivot</field>
        <field name="model">qingjia2.qingjiadan</field>
        <field name="arch" type="xml">
            <pivot string="qingjia2.qingjiadan" display_quantity="true">
                <field name="name" type="measure"/>
                <field name="days" type="measure"/>
                <field name="starttime" type="measure"/>
                <field name="reason" type="measure"/>
            </pivot>
        </field>
    </record>
   <!-- 定义视图动作 -->
     <record id="QingJiaDan_action" model="ir.actions.act_window">
        <field name="name">请假单</field>
        <field name="res_model">qingjia2.qingjiadan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban,graph,pivot</field>
         <field name="view_id" ref="QingJiaDan_tree"/>
    </record>
    <!-- 触发tree视图动作 -->
    <record model="ir.actions.act_window.view" id="QingJiaDan_tree_action">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="QingJiaDan_tree"/>
            <field name="sequence">1</field>
            <field name="act_window_id" ref="QingJiaDan_action"/>
    </record>
    <!-- 触发form视图动作 -->
    <record model="ir.actions.act_window.view" id="QingJiaDan_form_action">
            <field name="view_mode">form</field>
            <field name="view_id" ref="QingJiaDan_form"/>
            <field name="sequence">2</field>
            <field name="act_window_id" ref="QingJiaDan_action"/>
    </record>

    <!-- 定义菜单-->
    <!-- <menuitem id="QingJiaDan" name="qingjia2.qingjiadan" /> -->
    <menuitem id="menu_top" name="请假单" />
    <menuitem id="QingJiaDan_menu_field"   name="请假单" parent="menu_top" sequence="14" action="QingJiaDan_action"/>
</odoo>