<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 定义form表单视图 -->
     <record id="QingJiaDan_form" model="ir.ui.view">
        <field name="name">qingjia2.qingjiadan.form</field>
        <field name="type">form</field>
        <field name="model">qingjia2.qingjiadan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button class='oe_highlight' type="object" string="提交" name="do_confirm" attrs="{}" />
                    <button class='oe_highlight' type="object" string="审批" name="do_complete" attrs="{}" />
                    <field name="state"  widget="statusbar" statusbar_visible="draft,confirm,complete" />
                </header>

                <sheet>
                   <div class="oe_button_box" name="button_box">
                            <button name="do_confirm"
                                type="object"
                                icon="fa-pencil-square-o"
                                class="oe_stat_button"
                                help="提交">
                                <field name="state"  widget="statinfo" string="提交"/>
                            </button>
                            <button name="do_complete"
                                type="object"
                                icon="fa-pencil-square-o"
                                class="oe_stat_button"
                                help="审批">
                                <field name="state"  widget="statinfo" string="审批"/>
                            </button>
                   </div>
                                           <group>
                        <field name="name" />
                        <field name="days" />
                        <field name="starttime" />
                        <field name="reason" />
                     </group>

                                                        </sheet>

            <!-- 备注信息轨迹显示 begin-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            <!-- 备注信息轨迹显示 end-->

            </form>
        </field>
     </record>

     <!-- 定义tree列表视图 -->
    <record id="QingJiaDan_tree" model="ir.ui.view">
        <field name="name">qingjia2.qingjiadan.tree</field>
        <field name="type">tree</field>
        <field name="model">qingjia2.qingjiadan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="姓名"/>
                <field name="days" string="请假天数"/>
                <field name="starttime" string="开始日期"/>
                <field name="reason" string="请假事由"/>
            </tree>
        </field>
    </record>

    <!-- 定义筛选器视图 -->
    <record id="QingJiaDan_search_view" model="ir.ui.view">
        <field name="name">qingjia2.qingjiadan.search</field>
        <field name="model">qingjia2.qingjiadan</field>
        <field name="arch" type="xml">
            <search string="">
                <!-- 定义分组器 -->
                <group expand="0" string="Group By">
                </group>
            </search>
        </field>
    </record>
    <!-- 定义看板视图-->
    <record id="QingJiaDan_kanban_view" model="ir.ui.view">
        <field name="name">qingjia2.qingjiadan.kanban</field>
        <field name="type">kanban</field>
        <field name="model">qingjia2.qingjiadan</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" string="姓名"/>
                <field name="days" string="请假天数"/>
                <field name="starttime" string="开始日期"/>
                <field name="reason" string="请假事由"/>
               <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="row">
                                <div class="col-xs-6 pull-right text-right">
                                    <strong><span>
                                        <t>

                                            <t t-esc="record.name.value"/>
                                        </t>
                                    </span></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6 pull-right text-right">
                                    <strong><span>
                                        <t>

                                            <t t-esc="record.days.value"/>
                                        </t>
                                    </span></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6 pull-right text-right">
                                    <strong><span>
                                        <t>

                                            <t t-esc="record.starttime.value"/>
                                        </t>
                                    </span></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6 pull-right text-right">
                                    <strong><span>
                                        <t>

                                            <t t-esc="record.reason.value"/>
                                        </t>
                                    </span></strong>
                                </div>
                            </div>
                        </div>
                    </t>
               </templates>
            </kanban>
        </field>
    </record>

    <!-- 定义日历视图-->
